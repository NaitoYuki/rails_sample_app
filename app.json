{
  "name": "rails_sample_app",
  "scripts": {
    "postdeploy": "bundle exec rails db:schema:load db:seed_fu"
  },
  "env": {
    "SECRET_TOKEN": {
      "required": true
    }
  },
  "formation": {
    "worker": {
      "quantity": 1
    },
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "heroku/ruby"
    }
  ]
}
